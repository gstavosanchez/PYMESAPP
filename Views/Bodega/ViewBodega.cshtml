@model List<F2_201801351.Models.BodegaModel>
@{
    ViewBag.Title = "ViewBodega";
}

<fieldset>
    <legend>
        Mis Bodegas
    </legend>
    <div class="row">
        @foreach (var m in Model)
        {
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="https://image.flaticon.com/icons/png/512/18/18404.png" alt="..." height="200" width="200">
                    <div class="caption">
                        <h3>@m.nombre</h3>
                        <p>Codigo: @m.codigo</p>
                        <p>Descripcion: @m.descripcion</p>
                        <p>Direccion: @m.direccion</p>
                        <p><a class="btn btn-danger" href="~/Bodega/Delete/@m.idBodega">Eliminar</a> </p>
                    </div>

                </div>

            </div>

        }
    </div>
</fieldset>

